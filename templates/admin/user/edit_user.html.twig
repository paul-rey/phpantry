{% extends 'admin/base.html.twig' %}
{% block stylesheets %}
{% endblock %}
{% block title %}Edit User {{ user.id }}, username: {{ user.username }} {% endblock %}
{% block body %}
    <section class="account container py-5">
        <h3 class="my-4">{{ user.username }} account:</h3>
        <div class="account_info">
            <div class="account_summary">
                <div class="formEmail">
                    {{ form_start(formEmail) }}
                    <div class="form-group row">
                        {{ form_label(formEmail.email, 'Email', {'label_attr': {'class': 'col-lg-3 col-form-label form-control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(formEmail.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label"></label>
                        <div class="col-lg-9">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </div>
                    {{ form_end(formEmail) }}
                </div>
                <br>
                <div class="formPassword">
                    {{ form_start(formPassword) }}
                    <div class="form-group row">
                        {{ form_label(formPassword.newPassword.first, 'New Password', {'label_attr': {'class': 'col-lg-3 col-form-label form-control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(formPassword.newPassword.first,{'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(formPassword.newPassword.second, 'Confirm New Password', {'label_attr': {'class': 'col-lg-3 col-form-label form-control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(formPassword.newPassword.second,{'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label"></label>
                        <div class="col-lg-9">
                            <button type="submit" class="btn btn-primary">Update Password</button>
                        </div>
                    </div>
                    {{ form_end(formPassword) }}
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">
                        Actions:
                    </label>
                    <div class="col-lg-9">
                        {% if  user.active  == true %}
                            <a href="{{ path('admin_user_deactivate', {'id': user.id}) }}" class="btn btn-warning">Deactivate
                                Account</a>
                        {% else %}
                            <a href="{{ path('admin_user_activate', {'id': user.id}) }}" class="btn btn-success">Activate
                                Account</a>
                        {% endif %}
                        <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-danger">Delete
                            Account</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
