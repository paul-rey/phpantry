{% extends 'base.html.twig' %}
{% block stylesheets %}
    {# bootstrap css #}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    {# font awesome cdn #}
    <script src="https://kit.fontawesome.com/006eba1fe6.js"></script>
    {# theme bootswatch css #}
    <link rel="stylesheet" href="{{ asset('css/admin/bootswatch.css') }}">
{% endblock %}
{% block title %}{{ title | capitalize }}{% endblock %}
{% block body %}
    <section class="account">
        <h1>my account</h1>
        <div class="account_info">
            <div class="account_nav">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('account_index') }}">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('account_jobs') }}">Jobs</a>
                    </li>
                </ul>
            </div>
            <div class="account_summary">
                <div class="formEmail">
                    {{ form_start(formEmail) }}
                    <div class="form-group row">
                        {{ form_label(formEmail.email, 'Email', {'label_attr': {'class': 'col-lg-3 col-form-label form-control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(formEmail.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label"></label>
                        <div class="col-lg-9">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </div>
                    {{ form_end(formEmail) }}
                </div>
                <br>
                <div class="formPassword">
                    {{ form_start(formPassword) }}
                    <div class="form-group row">
                        {{ form_label(formPassword.currentPassword, 'Current Password', {'label_attr': {'class': 'col-lg-3 col-form-label form-control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(formPassword.currentPassword,{'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(formPassword.newPassword.first, 'New Password', {'label_attr': {'class': 'col-lg-3 col-form-label form-control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(formPassword.newPassword.first,{'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(formPassword.newPassword.second, 'Confirm New Password', {'label_attr': {'class': 'col-lg-3 col-form-label form-control-label'}}) }}
                        <div class="col-lg-9">
                            {{ form_widget(formPassword.newPassword.second,{'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label"></label>
                        <div class="col-lg-9">
                            <button type="submit" class="btn btn-primary">Update Password</button>
                        </div>
                    </div>
                    {{ form_end(formPassword) }}
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">
                        Actions:
                    </label>
                    <div class="col-lg-9">
                        <a href="{{ path('account_delete') }}" class="btn btn-danger">Delete Account</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {# bootstrap && jquery cdn scripts #}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
{% endblock %}
